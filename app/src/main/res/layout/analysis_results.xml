<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C9A84"
    tools:context=".AnalysisActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECG Analysis"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#F5F9FF"
        android:fontFamily="@font/bungee_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:ignore="HardcodedText" />

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/resultView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/summaryInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Lead I -->
            <TextView android:text="Lead I" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"/>
            <com.github.mikephil.charting.charts.LineChart
                android:background="@drawable/ecg_bgr_16px"
                android:id="@+id/chartLead1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="8dp" />

            <!-- Lead II -->
            <TextView android:text="Lead II" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"/>
            <com.github.mikephil.charting.charts.LineChart
                android:background="@drawable/ecg_bgr_16px"
                android:id="@+id/chartLead2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="8dp" />

            <!-- Lead III -->
            <TextView android:text="Lead III" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"/>
            <com.github.mikephil.charting.charts.LineChart
                android:background="@drawable/ecg_bgr_16px"
                android:id="@+id/chartLead3"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="8dp" />

            <!-- Time & HR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="â± Time: 00:00"
                    android:textSize="16sp"
                    android:textColor="#F5F9FF"
                    android:gravity="center"
                    android:fontFamily="@font/signika_semibold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvHR"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="â¤ï¸ Avg HR: 76 BPM"
                    android:textSize="16sp"
                    android:textColor="#F5F9FF"
                    android:fontFamily="@font/signika_semibold"
                    android:gravity="center"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Summary Info -->
    <LinearLayout
        android:id="@+id/summaryInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fontFamily="@font/bungee_regular"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/resultView"
        app:layout_constraintBottom_toTopOf="@id/ButtonPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="Analysis Summary"
            android:textColor="#F5F9FF"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />
        <TextView
            android:id="@+id/RthythmText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ Rhythm: "
            android:textSize="14sp"
            android:textColor="#2D3047"
            android:padding="5dp"
            android:background="#DDDDDD"
            tools:ignore="HardcodedText,SmallSp" />
        <TextView
            android:id="@+id/SignalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ Signal quality:"
            android:textColor="#2D3047"
            android:textSize="14sp"
            android:padding="5dp"
            android:background="#DDDDDD"
            tools:ignore="HardcodedText,SmallSp"/>
        <TextView
            android:id="@+id/Notes"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="â€¢ Notes:"
            android:textColor="#2D3047"
            android:textSize="14sp"
            android:padding="5dp"
            android:background="#DDDDDD"
            tools:ignore="HardcodedText,SmallSp"/>
    </LinearLayout>

    <!-- Button Panel -->
    <LinearLayout
        android:id="@+id/ButtonPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/summaryInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnUpload"
            android:text="â¬† Upload to Drive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika_medium"
            android:backgroundTint="#D3EAF2"
            android:textColor="#2D3047"
            android:layout_marginEnd="20dp" />

        <Button
            android:id="@+id/btnNewRecord"
            android:text="ðŸ” New Recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika_medium"
            android:backgroundTint="#FFE4E1"
            android:textColor="#2D3047" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
